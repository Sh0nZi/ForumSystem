@using ForumSystem.Web.Areas.Administration.Models;
@using Kendo.Mvc.UI;

@{
    ViewBag.Title = "Index";
    const string ControllerName = "PostsAdministration";
}

@(Html.Kendo()
    .Grid<PostAdminViewModel>()
    .Name("grid")
    .Columns(cols =>
    {
        cols.Bound(pr => pr.Id);
        cols.Bound(pr => pr.AuthorName);
        cols.Bound(pr => pr.Title);
        cols.Bound(pr => pr.Content).EditorTemplateName("tinymce_full");;
        cols.Bound(pr => pr.CreatedOn);
        cols.Bound(pr => pr.ModifiedOn);
        cols.Command(com => com.Edit());
        cols.Command(com => com.Destroy());
    })
    .ColumnMenu()
    .Pageable(page => page.Refresh(true))
    .Sortable()
    .Groupable()
    .Filterable()
    .Editable(edit => edit.Mode(GridEditMode.PopUp))
    .ToolBar(toolbar => toolbar.Create())
    .DataSource(data =>
        data
            .Ajax()
            .Model(m => m.Id(adv => adv.Id))
            .Read(read => read.Action("Read", ControllerName))
            .Create(create => create.Action("Create", ControllerName))
            .Update(update => update.Action("Update", ControllerName))
            .Destroy(destroy => destroy.Action("Delete", ControllerName))
            ))

